{
  "ts-node": {
    "files": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["src/tests/**/*"],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  }
}
